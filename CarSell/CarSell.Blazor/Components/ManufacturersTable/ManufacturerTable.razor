@if (Manufacturers.Count > 0)
{
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Manufacturer Id</th>
                <th scope="col">Name</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var man in Manufacturers)
            {
                <tr>

                    <td class="align-middle">
                        @man.Id
                    </td>
                    <td class="align-middle">
                        @man.Name
                    </td>

                    <td class="align-middle">
                        <button type="button" class="btn btn-info" @onclick="() => RedirectToUpdate(man.Id)">Update</button>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-danger" @onclick="() => Delete(man.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading...
    </span>
}